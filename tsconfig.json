{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "rootDir": "./src",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "outDir": "./lib",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
    }
}